<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/status_bar_height">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Progress -->
        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="@dimen/progress_wheel_size"
            android:layout_height="@dimen/progress_wheel_size"
            android:layout_gravity="center"
            app:matProg_barColor="@color/white"
            app:matProg_progressIndeterminate="true"/>

        <!-- Cards -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical">

            <com.triangleleft.flashcards.cards.view.DeckView
                android:id="@+id/deckView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="30dp"/>

        </FrameLayout>

        <!-- Result no errors -->
        <TextView
            style="@style/FlashcardResultText"
            android:gravity="center"
            android:text="@string/flashcard_result_no_errors"/>


        <!-- Result errors -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="64dp"
            android:paddingRight="64dp">

            <TextView
                style="@style/FlashcardResultText"
                android:gravity="center"
                android:text="@string/flashcard_result_errors"/>

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/flashcard_result_errors_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <!-- Error -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flashcard_error"/>

            <Button
                android:id="@+id/button_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_retry"/>
        </LinearLayout>

    </ViewFlipper>

    <FrameLayout
        android:id="@+id/flashcard_button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/flashcard_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/flashcard_button_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_refresh_black_24dp"
            android:tint="@color/white"/>
    </FrameLayout>

</FrameLayout>